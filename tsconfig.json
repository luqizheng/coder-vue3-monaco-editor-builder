{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.d.ts",
    "lib/**/*.tsx",
    "lib/**/*.vue"
  ],
  "exclude": [
    "lib/editor/lib.es5.d.ts?raw",
    "lib/editor/lib.es6.d.ts?raw"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}